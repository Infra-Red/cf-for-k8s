{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "schema.json",
    "description": "basic schema from z-schema benchmark (https://github.com/zaggino/z-schema)",
    "title": "Schema for current sample values",
    "type": "object",
    "additionalProperties": false,
    "version": {
	"major": 0,
	"minor": 4,
	"patch": 0
    },
    "$defs": {
	"cert": {
	    "crt": "string",
	    "key": "string",
	    "ca": "string"
	},
	"crt_key": {
	    "crt": "string",
	    "key": "string"
	}
    },
    "properties" : {
	"version": {
		"major": "number",
		"minor": "number",
		"patch": "number"
	},
	"cf_admin_password": {
	    "type": "string"
	},
	"cf_blobstore": {
	    "type": "string"
	},
	"cf_db": {
	    "type": "string"
	},
	"capi": {
	    "type": "object",
	    "properties": {
		"database": {
		    "type": "object",
		    "properties": {
			"password": {
			    "type": "string"
			}
		    }
		}
	    }
	},
	"system_certificate": {
	    "type": "object",
	    "properties": {
		"$ref": "#/$defs/cert"
	    }
	},
	"workloads_certificate": {
	    "type": "object",
	    "properties": {
		"$ref": "#/$defs/cert"
	    }
	},
	"internal_certificate": {
	    "type": "object",
	    "properties": {
		"$ref": "#/$defs/cert"
	    }
	},
	"log_cache_ca": {
	    "type": "object",
	    "properties": {
		"$ref": "#/$defs/crt_key"
	    }
	},
	"log_cache": {
	    "type": "object",
	    "properties": {
		"$ref": "#/$defs/crt_key"
	    }
	},
	"log_cache_metrics": {
	    "type": "object",
	    "properties": {
		"$ref": "#/$defs/crt_key"
	    }
	},
	"log_cache_gateway": {
	    "type": "object",
	    "properties": {
		"$ref": "#/$defs/crt_key"
	    }
	},
	"log_cache_syslog": {
	    "type": "object",
	    "properties": {
		"$ref": "#/$defs/crt_key"
	    }
	},
	"metric_proxy": {
	    "type": "object",
	    "properties": {
		"ca": {
		    "type": "object",
		    "properties": {
			"$ref": "#/$defs/crt_key"
		    }
		},
		"cert": {
		    "type": "object",
		    "properties": {
			"$ref": "#/$defs/crt_key"
		    }
		}
	    }
	},
	"uaa": {
	    "type": "object",
	    "properties": {
		"database": {
		    "type": "object",
		    "properties": {
			"password": "string"
		    }
		},
		"admin_client_secret": "string",
		"jwt_policy": {
		    "type": "object",
		    "properties": {
			"signing_key": "string"
		    }
		},
		"encryption_key": {
		    "type": "object",
		    "properties": {
			"passphrase": "string"
		    }
		}
	    }
	}
    }
}
